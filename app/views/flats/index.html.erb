<div class="container">
  <div class="row">
    <h1> All our Flats (<%= @flats.all.length %>)</h1>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://placehold.jp/300x300.png')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name  %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"><%= flat.number_of_guests  %></i>
                <span></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"><%= flat.price_per_night  %></i>
                <span></span>
              </div>
          </div>
        </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "ms-3 text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
